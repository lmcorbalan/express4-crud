extends layout

block content
  h1= title
  //- p #{JSON.stringify(personas)}
  //- p #{JSON.stringify(messages.info)}
  - if ( messages.info )
    .message.info
      p= messages.info

  a( href="p/new" ) Nueva Persona
  br
  br

  table
    thead
      tr
        th Nombre
        th Edad
        th Acciones
    tbody
      - personas.forEach( function (p, i) {
      tr
        th=p.nombre
        th=p.age
        th
          a( href="p/delete/" + p._id ) Borrar |
          a( href="p/edit/" + p._id )  Editar
      - } )
